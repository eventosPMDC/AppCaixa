<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fechamento_caixa"
    android:background="@color/cinza_fundo">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVendas"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_fechamento"
        app:layout_constraintEnd_toStartOf="@+id/recyclerViewCobrancas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCobrancas"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_fechamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerViewVendas"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_fechamento"
        android:layout_width="260dp"
        android:layout_height="76dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/botao_numerico"
        android:text="OK"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_fechamento"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_fechamento"
        android:layout_width="260dp"
        android:layout_height="76dp"
        android:layout_marginBottom="25dp"
        android:text="Cancelar"
        android:textSize="45sp"
        android:background="@drawable/botao_numerico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirm_fechamento" />

</androidx.constraintlayout.widget.ConstraintLayout>