<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_itens"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="REFRIGERANTE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/tv_qtdvlrun"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:text="4 X 4,00"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/ll_itens"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vlrtotal"
                android:layout_width="132dp"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:text="R$ 1.000,00"
                android:textAlignment="textEnd"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/baseline_catching_pokemon"
                android:contentDescription="excluir item"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>