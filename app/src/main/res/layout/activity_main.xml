<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="botão"
        android:onClick="showDialog"
        android:src="@drawable/configuracao_24"
        tools:ignore="MissingConstraints" />

    <!-- inicio da exibição dos botoes teclado -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="310px"
        android:layout_height="80px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_white"
            android:text="123"
            android:textAlignment="viewEnd"
            android:textSize="50dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:text="1"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="5px"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:text="2"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="5px"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:text="3"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        android:text="4"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="5px"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_2"
        android:text="5"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_6"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="5px"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        android:text="6"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        android:text="7"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="5px"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        android:text="8"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_9"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="5px"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        android:text="9"
        android:textSize="55sp"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginStart="118dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/background_blue"
        android:text="0"
        android:textSize="55sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_8" />
    <!-- final da exibição dos botoes teclado -->

    <!-- inicio da exibição dos itens -->


    <LinearLayout
        android:layout_width="460px"
        android:layout_height="700px"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/background_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:text="Descrição item\nQtde. X Vlr. Item"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Valor Total"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Excluir?"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_itens"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/background_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:text="Valor Total:"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_totalgeral"
                android:layout_width="127dp"
                android:layout_height="22dp"
                android:text="Valor Total"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    <!-- final da exibição dos itens -->
    <Button
        android:id="@+id/btn_teste"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/baseline_catching_pokemon"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>