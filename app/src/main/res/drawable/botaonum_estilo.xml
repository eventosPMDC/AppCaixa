<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="5dp" android:right="0dp" android:top="5dp" >
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <gradient
                android:type="radial"
                android:gradientRadius="80%p"
                android:angle="315"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="@color/black"
                android:endColor="@android:color/transparent"
                />
            <corners android:radius="10dp" />

        </shape>
    </item>

    <item  android:right="3dp" android:bottom="3dp">
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <gradient
                android:endColor="@color/fin_btn"
                android:startColor="@color/ini_btn" />
            <stroke
                android:width="0.5dp"
                android:color="@color/ini_btn" />
            <corners android:radius="10dp" /> <!-- Borda arredondada, se desejar -->
        </shape>
    </item>
</layer-list>